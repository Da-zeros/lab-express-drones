<div class="formCont">
  <h2>Create a new drone</h2>
  <form action="/drones/create" method="post">
    
    <div class="form-group">
      <label for="name">Nombre:</label>
      <input id="name" class="form-control" type="text" name="name">
    </div>
   
    <div class="form-group">
      <label for="propellers">Propellers:</label>
      <input id="propellers" class="form-control" type="number" name="propellers">
    </div>
    
    <div class="form-group">
      <label for="maxSpeed">Max-speed:</label>
      <input id="maxSpeed" class="form-control" type="number" name="maxSpeed">
    </div>
  
    <input type="submit" class="btn btn-primary" value="Save">
  </form>
</div>
